script(type="text/javascript", src="/js/event.js")

div#eid.gone= event._id
div.spacing

div.group-name
    a(href="/group/" + event.group._id)= event.group.name
div.event-name= event.name

div.event-info= event.info
            
div.spacing

div Rides:
div#ride-list
    button.left#add-ride-button(type="submit") Add Your Car
    div.spacing
    div.spacing
    div.spacing
    
    - each ride in rides
        div.ride-listing(data-rid=ride._id)
            div.driver
                img.user-image.driver-image(src="#", data-uid = ride.driver) 
                div.user-name.driver-name(data-uid = ride.driver)
            div.clear
            button.join-ride-button(type="submit", data-rid=ride._id) Join Ride
            div.spacing
            div.riders-list(data-rid=ride._id)
            -each rider in ride.riders
                div.rider
                    img.user-image.rider-image(src="#", data-uid = rider)
                    div.user-name.rider-name(data-uid = rider)
                div.clear